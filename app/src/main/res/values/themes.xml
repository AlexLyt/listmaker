<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Listmaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2e7d32</item>
        <item name="colorPrimaryVariant">#60ad5e</item>
        <item name="colorOnPrimary">#005005</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#283593</item>
        <item name="colorSecondaryVariant">#5f5fc4</item>
        <item name="colorOnSecondary">#ffffff</item>
<!--        <item name="itemTextColor">#001064</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Listmaker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Listmaker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Listmaker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>